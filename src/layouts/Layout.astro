---
import '../assets/app.css';
import { ViewTransitions } from 'astro:transitions';
import SEO from '../components/SEO.astro';
import Navbar from '../components/Navbar.astro';
import OrganizationSchema from '../components/schemas/OrganizationSchema.astro';

export interface Props {
  title: string;
  description: string;
  image?: string;
  type?: 'website' | 'article';
  showLogo?: boolean;
}

const {
  title = 'OZ ORC 2026 - Adelaide\'s Premier Old-School RPG Convention',
  description = 'Join us February 7th, 2026 at Colonel Light Gardens RSL for Adelaide\'s premier old-school D&D and OSR gaming convention. Experience classic tabletop RPGs with expert GMs.',
  image,
  type,
  showLogo = true,
} = Astro.props;

const site = 'https://gazzacon.com';
---

<!doctype html>
<html lang="en-AU">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      description={description}
      image={image}
      type={type}
    />
    <ViewTransitions />
  </head>
  <body>
    <Navbar showLogo={showLogo} />
    <main>
      <slot />
    </main>
    <OrganizationSchema />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  /* Page transition animations */
  @keyframes fade-in {
    from {
      opacity: 0;
    }
  }

  @keyframes fade-out {
    to {
      opacity: 0;
    }
  }

  @keyframes slide-from-right {
    from {
      transform: translateX(30px);
    }
  }

  @keyframes slide-to-left {
    to {
      transform: translateX(-30px);
    }
  }

  /* Apply smooth fade transition to page content */
  ::view-transition-old(root) {
    animation:
      90ms cubic-bezier(0.4, 0, 1, 1) both fade-out,
      300ms cubic-bezier(0.4, 0, 0.2, 1) both slide-to-left;
  }

  ::view-transition-new(root) {
    animation:
      210ms cubic-bezier(0, 0, 0.2, 1) 90ms both fade-in,
      300ms cubic-bezier(0.4, 0, 0.2, 1) both slide-from-right;
  }

  /* Smooth transition for dark mode changes */
  @media (prefers-reduced-motion: no-preference) {
    ::view-transition-group(root) {
      animation-duration: 0.5s;
    }
  }

  /* Logo morph transition between hero and navbar */
  ::view-transition-old(logo),
  ::view-transition-new(logo) {
    animation-duration: 0.5s;
    animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }

  ::view-transition-group(logo) {
    animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Respect user preferences for reduced motion */
  @media (prefers-reduced-motion: reduce) {
    ::view-transition-group(*),
    ::view-transition-old(*),
    ::view-transition-new(*) {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
    }
  }
</style>
