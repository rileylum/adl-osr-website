---
import LocationIcon from '../assets/location.svg?raw';
---

<div class="hero bg-base-200 min-h-screen">
  <div class="hero-content text-center w-full">
    <div class="max-w-4xl w-full px-4">
      <h1 class="text-5xl font-bold">LOCATION</h1>
      <div class="py-6 flex flex-col items-center justify-center gap-2">
        <div class="flex items-center gap-2">
          <Fragment set:html={LocationIcon} />
          <span>Colonel Light Gardens RSL</span>
        </div>
        <span class="text-base-content/70"
          >11 Rothwell Ave, Colonel Light Gardens SA 5041</span
        >
      </div>

      <div
        class="rounded-box overflow-hidden border border-base-content/5 bg-base-100 p-4"
      >
        <div class="w-full aspect-video">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3268.8249211805587!2d138.59771519999998!3d-34.9860499!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ab0cfd4be116b63%3A0x41af81ff8aee1a85!2sRSL%20Colonel%20Light%20Gardens%20Sub%20Branch%20Inc!5e0!3m2!1sen!2sau!4v1760871343157!5m2!1sen!2sau"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            class="rounded-lg"></iframe>
        </div>
        <div class="mt-4 text-left">
          <p class="text-lg font-semibold">
            RSL Colonel Light Gardens Sub Branch Inc
          </p>
          <p class="text-base-content/70">
            11 Rothwell Ave, Colonel Light Gardens SA 5041
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
