---
const galleryImages = [
  { src: '/images/gallery/1.webp', alt: 'OZ ORC event photo 1' },
  { src: '/images/gallery/2.webp', alt: 'OZ ORC event photo 2' },
  { src: '/images/gallery/3.webp', alt: 'OZ ORC event photo 3' },
  { src: '/images/gallery/4.webp', alt: 'OZ ORC event photo 4' },
  { src: '/images/gallery/5.webp', alt: 'OZ ORC event photo 5' },
  { src: '/images/gallery/6.webp', alt: 'OZ ORC event photo 6' },
  { src: '/images/gallery/7.webp', alt: 'OZ ORC event photo 7' },
  { src: '/images/gallery/8.webp', alt: 'OZ ORC event photo 8' },
  { src: '/images/gallery/9.webp', alt: 'OZ ORC event photo 9' },
];
---

<section class="bg-base-200 min-h-screen py-20">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-12">
      <h1 class="text-5xl font-bold mb-6">PHOTOS FROM PAST EVENTS</h1>
      <p class="text-lg text-base-content/70">
        Relive the excitement from previous OZ ORC conventions
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        galleryImages.map((image) => (
          <div class="card bg-base-100 shadow-sm overflow-hidden">
            <figure class="aspect-square">
              <img
                src={image.src}
                alt={image.alt}
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              />
            </figure>
          </div>
        ))
      }
    </div>

    <div class="text-center mt-12">
      <a href="/" class="btn btn-primary">Back to Main Page</a>
    </div>
  </div>
</section>
