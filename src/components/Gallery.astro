---
const galleryImages = [
  { src: '/images/gallery/1.webp', alt: 'Players enjoying old-school D&D gaming at OZ ORC Adelaide convention' },
  { src: '/images/gallery/2.webp', alt: 'Game master running OSR tabletop RPG session at OZ ORC' },
  { src: '/images/gallery/3.webp', alt: 'Attendees playing classic tabletop games at Adelaide OSR convention' },
  { src: '/images/gallery/4.webp', alt: 'Gaming tables setup at OZ ORC old-school gaming event' },
  { src: '/images/gallery/5.webp', alt: 'Dice and character sheets during OSR game session at OZ ORC' },
  { src: '/images/gallery/6.webp', alt: 'Community gathering at OZ ORC Adelaide tabletop gaming convention' },
  { src: '/images/gallery/7.webp', alt: 'Players engaged in dungeon crawl at OZ ORC OSR event' },
  { src: '/images/gallery/8.webp', alt: 'Tabletop RPG gaming atmosphere at OZ ORC Adelaide' },
  { src: '/images/gallery/9.webp', alt: 'Old-school D&D enthusiasts at OZ ORC gaming convention' },
];
---

<section class="bg-base-200 min-h-screen py-20">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-12">
      <h1 class="text-5xl font-bold mb-6">PHOTOS FROM PAST EVENTS</h1>
      <p class="text-lg text-base-content/70">
        Relive the excitement from previous OZ ORC conventions
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        galleryImages.map((image) => (
          <div class="card bg-base-100 shadow-sm overflow-hidden">
            <figure class="aspect-square">
              <img
                src={image.src}
                alt={image.alt}
                width="959"
                height="722"
                loading="lazy"
                decoding="async"
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              />
            </figure>
          </div>
        ))
      }
    </div>

    <div class="text-center mt-12">
      <a href="/" class="btn btn-primary">Back to Main Page</a>
    </div>
  </div>
</section>
