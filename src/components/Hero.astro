---
import CalendarIcon from '../assets/calendar.svg?raw';
import LocationIcon from '../assets/location.svg?raw';
import DiscordIcon from '../assets/discord.svg?raw';
---

<div class="hero bg-base-200 min-h-screen">
  <div class="hero-content text-center">
    <div class="max-w-2xl">
      <div>
        <img
          src="/images/OZORC_Dungeon.svg"
          alt="OZ ORC Logo"
          width="5000"
          height="2500"
          class="w-full max-w-md mx-auto banner-logo"
        />
      </div>
      <h1 class="text-5xl font-bold mb-4">
        OZ ORC: Adelaide's <span class="whitespace-nowrap">Old-School</span> D&D & OSR Convention 2026
      </h1>
      <div class="py-4 flex flex-col items-center justify-center gap-2">
        <div class="flex flex-wrap items-center justify-center gap-4">
          <div class="flex items-center gap-2">
            <Fragment set:html={CalendarIcon} />
            <span>February 7th, 2026</span>
          </div>
          <div class="flex items-center gap-2">
            <Fragment set:html={LocationIcon} />
            <span>Colonel Light Gardens RSL</span>
          </div>
        </div>
        <div class="text-lg font-semibold">
          <span class="text-primary">Tickets: $15 AUD</span>
        </div>
      </div>
      <div>
        <p class="text-lg mb-3">Ready to join Adelaide's premier old-school gaming convention?</p>
        <p class="text-lg mb-5">Sign up now or join our Discord community!</p>
      </div>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="https://warhorn.net/events/oz-orc-adelaide-feb-2026"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-primary"
        >
          Sign Up for Event
        </a>
        <a
          href="https://discord.gg/BNehJG2xP4"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-primary gap-2"
        >
          <Fragment set:html={DiscordIcon} />
          Join Discord
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .banner-logo {
    width: 100%;
    height: auto;
  }

  /* Invert the SVG colors in dark mode */
  @media (prefers-color-scheme: dark) {
    .banner-logo {
      filter: invert(1);
    }
  }

  /* For DaisyUI dark theme */
  [data-theme='dark'] .banner-logo {
    filter: invert(1);
  }
</style>
